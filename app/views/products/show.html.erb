<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6"><%= image_tag(rails_blob_path(@product.image.variant(resize_to_fill: [500,581]))) %></div>
      <div class="col-md-6">
        <div class="small mb-1">SKU: BST-498</div>
        <h1 class="display-5 fw-bolder"><%= @product.name %></h1>
        <div class="fs-5 mb-5">
          <span><%= number_to_currency(@product.price, unit: "å††") %></span>
        </div>
        <p class="lead"><%= @product.description %></p>
        <div class="d-flex">
          <%= form_with url: cart_products_path(product_id: @product.id), class:"d-flex",local:true do |f| %>
            <%= f.select :quantity, [*1..10], class: "text-center me-3" %>
            <%=f.submit "Add to Cart", class:"btn btn-outline-dark flex-shrink-0",style: "margin-left: 1.5rem" %>
          <% end %>
          <%#= button_to "  Add to cart", cart_products_path(product_id: @product.id), data: { "turbo-method": :post },class:"btn btn-outline-dark flex-shrink-0" %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4">Related products</h2>
    <%= render partial: 'products',locals: {products: @products} %>
  </div>
</section>
