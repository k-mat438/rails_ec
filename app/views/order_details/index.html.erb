<div class="mb-6 text-center" style="padding-top: 50px">
  <span class="display-6 fw-bolder">
    Order Histroy
  </span>
</div>
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <% @orders.each do |order| %>
      <div class="d-flex flex-column justify-content-center">
        <div class="purchase-item">
          <div class="purchase-number"><%= "Order number : #{order.id}" %></div>
          <div class="purchase-details">
            <h5><%= number_to_currency(order.amount, unit: "¥", format: "%u %n" ) %></h5>
            <p><%= "Name: #{order.firstname}" %></p>
            <p><%= order.created_at.to_s(:datetime_jp) %></p>
            <%= link_to '詳細を見る', order_detail_path(order.id), style:"float: right"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<style>
  .purchase-item {
      width: 70%;
      border: 1px solid #dee2e6;
      border-radius: 10px;
      padding: 20px;
      margin: 20px auto; /* 垂直方向にも中央配置 */
      background-color: #f2f5f7;
  }

  .purchase-number {
      font-size: 18px;
      color: #007bff;
  }

  .purchase-details {
      margin-top: 10px;
  }
</style>
